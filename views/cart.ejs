        <![endif]-->
		<div class='preloader'><div class='loaded'>&nbsp;</div></div>
         
        <!-- Start of Header Section -->
        <%- include("partials/header") %>        
        <!-- End Header Section -->


        <section id="slider" class="slider">
            <div class="slider_overlay">
            <div class="container">
                <h4 style="color: white; margin-top: 10rem;">Your Shopping Details</h4>
                <div class="row">
                    <br><br>
                    <div class="col-lg-12" style="background-color:whitesmoke; padding: 1rem; margin: 2rem;  border-radius: 10px;">
                        <div class="box-element">
                            <a class="btn btn-primary" href="/shop">&#x2190; Continue Shopping</a>
                            <br>
                            <br>
                            <% var total = 0 %>
                            <% cart.products.forEach(item=>{total+=item.price * item.qty_purchased})%>
                            <table class="table">
                                <tr>
                                    <th>
                                        <h5>Items: <strong><%= cart.itemCount %></strong></h5>
                                    </th>
                                    <th>
                                        <h5>Total: <strong>&#8377;<%= total %></strong></h5>
                                    </th>
                                    <th>
                                        <a style="float: right; margin: 5px;" class="btn btn-primary"
                                            href="/checkout">Checkout</a>
                                    </th>
                                </tr>
                            </table>
                        </div>
        
                        <br>
        
                        <table class="table">
                            <thead>
                                <th><h5>S.no.</th></h5>
                                <th><h5>Item</th></h5>
                                <th><h5>Price</th></h5>
                                <th><h5>Qty</th></h5>
                                <th><h5>Total</th></h5>
                            </thead>
        
                            <% cart.products.forEach(function(item,index){%>
                            <tr>
                                <td>
                                    <%= index+1 %>
                                </td>
                                <td>
                                    <%= item.item_name %>
                                </td>
                                <td>
                                    &#8377;<%= item.price %>
                                </td>
                                <td>
                                    <%= item.qty_purchased %>
                                </td>
                                <td>
                                    &#8377;<%= item.price * item.qty_purchased %>
                                </td>
                            </tr>
                            <%})%>
                        </table>
                    </div>
                </div>
            </div>
            </div>
        </section>

        <!--Footer-Widget-->
        <%- include("partials/footer_widget") %> 

        <!--Footer-->
        <%- include('footer'); -%>
		
