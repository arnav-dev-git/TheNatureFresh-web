        <script>
            var mess = '<%- message %>'
        if(mess!='false'){
            alert(mess)
        }
            function handleSubmit(event) {
                event.preventDefault()            
                document.getElementById('phoneNumber').value = '+91' + document.getElementById('phoneNumber').value
                document.getElementById('realSubmit').click()
            }
        </script>
        </script>
