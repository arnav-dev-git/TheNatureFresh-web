        <!-- Start of Header Section -->
        <%- include("partials/header") %>        
        <!-- End Header Section -->

        <section id="slider" class="slider">
            <div class="slider_overlay">
            <div class="container">
                <div class="container" style="background-color:whitesmoke; padding: 2rem; margin: 3rem;  border-radius: 10px; margin-top: 10rem;">
                    <a class="btn btn-primary" href="/client-profile" >&#x2190; My Profile</a>
                    <br><hr>
            
                <!-- Edit User -->
                <h5><strong>Edit Profile:<strong></strong></h5>
                                  <div class="col-sm-12">
                <form action="/updateDetails" method="POST" oninput='newpassword.setCustomValidity(newpassword.value != password.value ? "Passwords do not match." : "")' >
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" style="background-color:beige;" class="form-control" id="name" name="name" value="<%= user.displayName %>" oninput="document.getElementById('fakeSubmit').style.display = 'block'" required/>
                    </div>
                    <div class="form-group">
                        <label for="password1">New Password:</label>
                        <input type="password" style="background-color:beige;"class="form-control" id="password1" name="password" oninput="document.getElementById('fakeSubmit').style.display = 'block'" />
                        <label for="password2">Re-enter Password:</label>
                        <input type="password" style="background-color:beige;"class="form-control" id="password2" name="newpassword" oninput="document.getElementById('fakeSubmit').style.display = 'block'" />
                    </div>
                    <div>
                        <label for="address">Address:</label>
                        <textarea class="form-control mb-3" style="background-color:beige;"id="address" name="address" oninput="document.getElementById('fakeSubmit').style.display = 'block'" required><%= address %></textarea>
                    </div>
                    <label for="phoneNumber">Phone Number</label>
                    <div class="input-group mb-2" style="width: 100%;">
                        <% if(num){ var value = parseInt(num.substr(3, 13))} %>
                        <input type="text" style="background-color:beige;" class="form-control" id="phoneNumber" value="<%= value %>"  name="phoneNumber" placeholder="Phone No." oninput="document.getElementById('fakeSubmit').style.display = 'block'" required>
                    </div>
                    <br>
                    <center><button class="btn btn-primary" id="fakeSubmit" onclick="handleSubmit(event)" >SUBMIT</button></center>
                    <center><button type="submit" class="btn btn-outline-light mt-4 px-3" id="realSubmit" style="display: none;">Hidden</button></center>
                </form>
                
            </div>
            </div>
        </section>
        

        <!--Footer-Widget-->
        <%- include("partials/footer_widget") %> 
        <!--Footer-->
        <%- include('footer'); -%>
		
